<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/content/StylesParent.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/css/bootstrap.css" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>

</head>
    <body>
        <nav class="navbar navbar-expand-sm sticky-top navbar-light">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Home</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navToggle" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navToggle">
                <div class="navbar-nav">
                    <a class="nav-item nav-link" asp-controller="Post" asp-action="AddPost">Add Post</a>
                    <div class="dropdown-divider"></div>
                    <a class="nav-item nav-link" asp-controller="Recipe" asp-action="Recipes">Recipes</a>
                    <div class="dropdown-divider"></div>
                    <a class="nav-item nav-link" asp-controller="Home" asp-action="About">About</a>
                    <div class="dropdown-divider"></div>
                    <a class="nav-item nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                </div>
            </div>
        </nav>

        <div>
            @RenderBody()
        </div>
    </body>
</html>